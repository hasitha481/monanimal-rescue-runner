/* Monad Purple Theme */
:root {
    --monad-purple: #6B46C1;
    --monad-dark-purple: #553C9A;
    --monad-light-purple: #8B5CF6;
    --monad-accent: #F3E8FF;
    --dark-bg: #1F1B24;
    --text-white: #FFFFFF;
    --text-gray: #D1D5DB;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Arial', sans-serif;
    background: linear-gradient(135deg, var(--dark-bg) 0%, var(--monad-dark-purple) 100%);
    color: var(--text-white);
    min-height: 100vh;
    overflow-x: hidden;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

header {
    text-align: center;
    margin-bottom: 20px;
}

header h1 {
    font-size: 2.5rem;
    color: var(--monad-light-purple);
    text-shadow: 0 0 20px var(--monad-purple);
    margin-bottom: 10px;
}

header p {
    font-size: 1.2rem;
    color: var(--text-gray);
}

.game-container {
    position: relative;
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
}

#game-canvas {
    border: 3px solid var(--monad-purple);
    border-radius: 10px;
    box-shadow: 0 0 30px var(--monad-purple);
}

#ui-overlay {
    position: absolute;
    top: 10px;
    left: 10px;
    right: 10px;
    z-index: 100;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

#wallet-section {
    background: rgba(107, 70, 193, 0.8);
    padding: 10px 15px;
    border-radius: 8px;
    backdrop-filter: blur(10px);
}

#connect-wallet, #disconnect-wallet {
    background: var(--monad-light-purple);
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    cursor: pointer;
    font-weight: bold;
    transition: all 0.3s;
}

#connect-wallet:hover, #disconnect-wallet:hover {
    background: var(--monad-purple);
    transform: translateY(-2px);
}

#wallet-info {
    color: var(--monad-accent);
    font-size: 0.9rem;
}

#score-section {
    background: rgba(107, 70, 193, 0.8);
    padding: 10px 15px;
    border-radius: 8px;
    backdrop-filter: blur(10px);
    text-align: right;
}

#current-score, #high-score {
    font-weight: bold;
    margin: 5px 0;
}

#current-score {
    font-size: 1.3rem;
    color: var(--monad-accent);
}

#leaderboard-section {
    position: absolute;
    top: 80px;
    right: 10px;
    background: rgba(31, 27, 36, 0.95);
    padding: 15px;
    border-radius: 8px;
    border: 2px solid var(--monad-purple);
    min-width: 250px;
    backdrop-filter: blur(10px);
}

#leaderboard-list {
    max-height: 300px;
    overflow-y: auto;
}

.leaderboard-item {
    display: flex;
    justify-content: space-between;
    padding: 8px 0;
    border-bottom: 1px solid var(--monad-dark-purple);
}

.leaderboard-item:last-child {
    border-bottom: none;
}

.leaderboard-rank {
    font-weight: bold;
    color: var(--monad-light-purple);
}

.leaderboard-score {
    color: var(--monad-accent);
}

/* Modal Styles */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    backdrop-filter: blur(5px);
}

.modal-content {
    background: linear-gradient(135deg, var(--dark-bg) 0%, var(--monad-dark-purple) 100%);
    padding: 30px;
    border-radius: 15px;
    border: 3px solid var(--monad-purple);
    box-shadow: 0 0 30px var(--monad-purple);
    text-align: center;
    max-width: 400px;
    width: 90%;
}

.modal-content h2 {
    color: var(--monad-light-purple);
    margin-bottom: 20px;
    font-size: 2rem;
}

.modal-content ul {
    text-align: left;
    margin: 20px 0;
    list-style: none;
}

.modal-content li {
    margin: 10px 0;
    padding: 8px;
    background: rgba(107, 70, 193, 0.2);
    border-radius: 5px;
}

.modal-content button {
    background: var(--monad-light-purple);
    color: white;
    border: none;
    padding: 12px 24px;
    margin: 10px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1rem;
    font-weight: bold;
    transition: all 0.3s;
    min-width: 150px;
}

.modal-content button:hover {
    background: var(--monad-purple);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(107, 70, 193, 0.4);
}

#submit-score {
    background: linear-gradient(45deg, var(--monad-purple), var(--monad-light-purple));
}

#tx-status {
    margin: 10px 0;
    padding: 10px;
    border-radius: 5px;
    font-size: 0.9rem;
}

.tx-pending {
    background: rgba(255, 193, 7, 0.2);
    color: #FFC107;
    border: 1px solid #FFC107;
}

.tx-success {
    background: rgba(40, 167, 69, 0.2);
    color: #28A745;
    border: 1px solid #28A745;
}

.tx-error {
    background: rgba(220, 53, 69, 0.2);
    color: #DC3545;
    border: 1px solid #DC3545;
}

footer {
    text-align: center;
    margin-top: 30px;
    padding: 20px;
    color: var(--text-gray);
    font-size: 0.9rem;
}

/* Responsive Design */
@media (max-width: 768px) {
    header h1 {
        font-size: 2rem;
    }
    
    #ui-overlay {
        flex-direction: column;
        gap: 10px;
    }
    
    #score-section {
        text-align: left;
    }
    
    .modal-content {
        padding: 20px;
        margin: 20px;
    }
}

/* Loading Animation */
@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}

.loading {
    animation: pulse 1.5s ease-in-out infinite;
}

/* Particle Effects */
@keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
}

.floating {
    animation: float 3s ease-in-out infinite;
}